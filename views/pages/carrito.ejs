<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="data:;base64,=">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <%- include('../partials/scripts'); %>
    <title>E-Commerce Carrito</title>
</head>
<body>
    <header>
        <%- include('../partials/headerAuth'); %>
    </header>

    <main>
        <div class="text-center pt-1 d-flex justify-content-between align-items-baseline">
            <div class="d-flex">
                <h6 class="text-muted f2w-normal  ps-4 pe-4 mb-0"><strong>User: </strong> <%= user %></h6>
            </div>
            <a class="text-muted fw-light pe-4 text-decoration-none fw-semibold" href="/logout">Logout</a>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-12 m-3">
                    <% if (lista.length > 0) { %>
                        <table class="table table-light align-middle text-center">
                            <thead>
                              <tr class="align-self-center">
                                <th scope="col">Imagen</th>
                                <th scope="col">Producto</th>
                                <th scope="col">Precio Unitario</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Subtotal</th>
                                <th scope="col"></th>
                              </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                <% lista.forEach((producto) => { %>
                                    <tr class="align-self-end">
                                        <td><img width="100px" src= <%= producto.thumbnail %> alt= <%= producto.title %> ></td>
                                        <td><%= producto.title %></td>
                                        <td>$ <%= producto.unitPrice %></td>
                                        <td><%= producto.qty %></td>
                                        <td><strong>$ <%= producto.totalPrice %></strong></td>
                                        <td>
                                            <a href="/carrito">
                                                <button type="button" class="btn btn-light btn-sm border border-secondary" onclick="borrarProductoCarrito('<%= carritoId %>', '<%= producto._id %>')">
                                                    <img src="https://curso-37545-proyecto.vercel.app/media/delete.png" alt="Del" style="width: 24px;">
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                          </table>
                          <div class="container p-2">
                            <div class="row p-2 justify-content-center">
                                <div class="col-auto">
                                    <a href="/">
                                        <button class="btn btn-secondary mb-3">Seguir comprando</button>
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="/compraOut">
                                        <button class="btn btn-primary mb-3">Confirmar el pedido</button>
                                    </a>
                                </div>
                            </div>
                    <% } else { %>
                        <h4 class="text-center p-5">UPS.. tu carrito está vacío!!</h4>
                        <div class="text-center">
                            <img src="https://curso-37545-proyecto.vercel.app/media/emptyCart.gif" alt="Del">
                        </div>
                        <H5 class="text-center p-5">Elige algún producto para visualizarlo en esta sección</H5>
                        <div class="container p-2">
                            <div class="row p-2 justify-content-center">
                                <div class="col-auto">
                                    <a href="/">
                                        <button class="btn btn-secondary mb-3">Volver</button>
                                    </a>
                                </div>
                            </div>
                        </div>  
                    <% } %>
                </div>
            </div>
        </div>


    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>