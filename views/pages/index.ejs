<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="data:;base64,=">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%- include('../partials/scripts'); %>
    <title>E-Commerce Products</title>
</head>
<body>
    <header>
        <%- include('../partials/headerAuth'); %>
    </header>

    <main>
        <div class="text-center pt-1 d-flex justify-content-between align-items-baseline">
            <div class="d-flex">
                <h6 class="text-muted f2w-normal  ps-4 pe-4 mb-0"><strong>User: </strong> <%= user %></h6>
            </div>
            <a class="text-muted fw-light pe-4 text-decoration-none fw-semibold" href="/logout">Logout</a>
        </div>

        <% if (lista.length > 0) { %>
            <div class="d-flex flex-wrap justify-content-center">
                <% lista.forEach((producto) => { %>
                    <div class="card text-bg-light col-md-5 m-3 justify-content-between">
                        <a href="/productos/<%= producto._id %>" class="row g-0 align-items-center text-decoration-none text-black">
                            <div class="col-md-4 p-2 text-center">
                                <img class="img-fluid" width="100px" src=<%= producto.thumbnail %> alt=<%= producto.title %> />
                            </div>
                            <div class="col-md-8 text-start">
                                <div class="card-body">
                                    <h4><%= producto.category %> - '<%= producto.title %>'</h4>
                                    <h5>Precio: $<%= producto.price %></h5>
                                    <p><b>Descripci√≥n:</b> <%= producto.description %></p>
                                    <p><b>Stock:</b> <%= producto.Stock %></p>
                                </div>
                            </div>
                        </a>
                        <div class="row g-0 card-footer text-muted text-center">
                            <div class="container">
<!--                                 <div class="row justify-content-center align-items-center">
                                    <button class="btn btn-outline-secondary btn-sm col-auto" onclick="resta(<%= producto._id %>)">-</button>
                                    <span class="col-auto" id=<%= producto._id %>>1</span>
                                    <button class="btn btn-outline-secondary btn-sm col-auto" onclick="suma(<%= producto._id %>)">+</button>
                                </div> -->
                                <!-- <a class="row p-2 justify-content-center text-decoration-none" href="/carrito"> -->
                                    <input type="button" class="btn btn-dark col-auto" value="Agregar al carrito" onclick="agregaItem('<%= carritoId %>', '<%= producto._id %>')"></input>  
                               <!--  </a> -->
                            </div>
                        </div>
                    </div>  
                <% }) %>  
            </div>
        <% } else if (lista.error == "Producto no encontrado") { %>
            <H3 class="text-center p-5">Producto no encontrado</H3>
            <div class="container p-2">
                <div class="row p-2 justify-content-center">
                    <div class="col-auto">
                        <a href="/">
                            <button class="btn btn-secondary mb-3">Volver</button>
                        </a>
                    </div>
                </div>
            </div>  
        <% } else { %> 
            <H3 class="text-center p-5">No hay productos</H3>
            <div class="container p-2">
                <div class="row p-2 justify-content-center">
                    <div class="col-auto">
                        <a href="/">
                            <button class="btn btn-secondary mb-3">Volver</button>
                        </a>
                    </div>
                </div>
            </div>  
        <% } %> 

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>